<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Game Page</title>
</head>
<body>
  <h2>🚀 Welcome to the Game!</h2>
  <button onclick="sendResult()">🏆 Finish Game</button>

  <script>
    function sendResult() {
      const result = {
        gold: Math.floor(Math.random() * 20 + 5),
        diamonds: Math.floor(Math.random() * 5),
        mode: "rage",
        kills: Math.floor(Math.random() * 10),
        hits: Math.floor(Math.random() * 20),
        result: "win"
      };

      Telegram.WebApp.sendData(JSON.stringify(result));
      Telegram.WebApp.close();
    }
  </script>

  <script src="https://telegram.org/js/telegram-web-app.js"></script>
</body>
</html>
